@SET_MAKE@

# package information
PACKAGE_NAME	= @PACKAGE_NAME@
PACKAGE_VERSION	= @PACKAGE_VERSION@
BUILD_DATE	= @BUILD_DATE@
OCAMLVERSION	= @OCAMLVERSION@

# directories
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
mandir		= @mandir@
ADVI_LOC	= @ADVI_LOC@
TEXMFMAIN	= @TEXMFMAIN@
OCAMLLIB	= @OCAMLLIB@
MANEXT		= 1

# binaries
HEVEA		= @HEVEA@
HTMLC		= @HTMLC@
OCAMLC		= @OCAMLC@
OCAMLOPT	= @OCAMLOPT@
OCAMLDEP	= @OCAMLDEP@
INSTALL		= @INSTALL@
CC		= @CC@
RM		= rm -fR
MV		= mv -f

# flags
HEVEA_FLAGS	= -entities -I ../tex
HTMLC_FLAGS	= -I includes \
		  -D CamlVersion $(OCAMLVERSION) \
		  -D version $(PACKAGE_VERSION)
