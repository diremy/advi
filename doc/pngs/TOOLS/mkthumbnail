# Command to generate thumbnails image arguments

HHEIGHT=230
HWIDTH=170

IMGS=$*

#echo Resizing source images
for i in $IMGS
do
 file=`basename $i`;
 dir=`dirname $i`;
 echo "convert -geometry ${HWIDTH}x$HHEIGHT! $i $dir/thumb_$file"
 #read x
 convert -geometry ${HWIDTH}x$HHEIGHT! $i $dir/thumb_$file
done
